---
export interface Props {
  specs: {
    boilerType: string;
    pressure: string;
    waterTank: string;
    dimensions: string;
    warranty: string;
  };
}

const { specs } = Astro.props;

const specIcons = {
  boilerType: `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 18.657A8 8 0 016.343 7.343S7 9 9 10c0-2 .5-5 2.5-7 0 0 .5 2 1.5 5 0 0 .5-3 2.5-5 1.5 3 2.5 5 2.5 7 2-1 2.5-3 2.5-3a8 8 0 01-2.343 11.314z" />
  </svg>`,
  
  pressure: `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 10V3L4 14h7v7l9-11h-7z" />
  </svg>`,
  
  waterTank: `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M19.428 15.428a2 2 0 00-1.022-.547l-2.387-.477a6 6 0 00-3.86.517l-.318.158a6 6 0 01-3.86.517L6.05 15.21a2 2 0 00-1.806.547M8 4h8l-1 1v5.172a2 2 0 00.586 1.414l5 5c1.26 1.26.367 3.414-1.415 3.414H4.828c-1.782 0-2.674-2.154-1.414-3.414l5-5A2 2 0 009 10.172V5L8 4z" />
  </svg>`,
  
  dimensions: `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 5a1 1 0 011-1h14a1 1 0 011 1v2a1 1 0 01-1 1H5a1 1 0 01-1-1V5zM4 13a1 1 0 011-1h6a1 1 0 011 1v6a1 1 0 01-1 1H5a1 1 0 01-1-1v-6zM16 13a1 1 0 011-1h2a1 1 0 011 1v6a1 1 0 01-1 1h-2a1 1 0 01-1-1v-6z" />
  </svg>`,
  
  warranty: `<svg class="w-6 h-6" fill="none" stroke="currentColor" viewBox="0 0 24 24">
    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12l2 2 4-4m5.618-4.016A11.955 11.955 0 0112 2.944a11.955 11.955 0 01-8.618 3.04A12.02 12.02 0 003 9c0 5.591 3.824 10.29 9 11.622 5.176-1.332 9-6.03 9-11.622 0-1.042-.133-2.052-.382-3.016z" />
  </svg>`
};

const specLabels = {
  boilerType: 'Boiler Type',
  pressure: 'Pressure',
  waterTank: 'Water Tank',
  dimensions: 'Dimensions',
  warranty: 'Warranty'
};
---

<section class="mb-8">
  <h2 class="text-2xl font-bold text-espresso mb-6">Technical Specifications</h2>
  
  <div class="bg-cream rounded-lg p-6">
    <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-6">
      {Object.entries(specs).map(([key, value]) => (
        <div class="flex items-start gap-4 p-4 bg-white rounded-lg shadow-sm">
          <div class="text-caramel flex-shrink-0 mt-1" set:html={specIcons[key as keyof typeof specIcons]} />
          <div class="flex-1">
            <h3 class="font-semibold text-espresso text-sm uppercase tracking-wide mb-1">
              {specLabels[key as keyof typeof specLabels]}
            </h3>
            <p class="text-charcoal font-medium">
              {value}
            </p>
          </div>
        </div>
      ))}
    </div>
  </div>

  <!-- Spec Details -->
  <div class="mt-6 bg-latte rounded-lg p-6">
    <h3 class="text-lg font-semibold text-espresso mb-4">Understanding These Specifications</h3>
    <div class="grid md:grid-cols-2 gap-6 text-sm text-charcoal">
      <div>
        <h4 class="font-semibold text-espresso mb-2">Boiler Type</h4>
        <ul class="space-y-1 text-xs">
          <li><strong>Thermocoil:</strong> Fast heating, compact design</li>
          <li><strong>Single Boiler:</strong> Traditional, sequential operation</li>
          <li><strong>Dual Boiler:</strong> Simultaneous brewing & steaming</li>
          <li><strong>Heat Exchanger:</strong> Single tank, dual temperature</li>
        </ul>
      </div>
      <div>
        <h4 class="font-semibold text-espresso mb-2">Pressure</h4>
        <ul class="space-y-1 text-xs">
          <li><strong>9 bar:</strong> Optimal brewing pressure</li>
          <li><strong>15 bar:</strong> Common pump pressure</li>
          <li><strong>Higher pressure:</strong> More crema, fuller extraction</li>
        </ul>
      </div>
    </div>
  </div>
</section>